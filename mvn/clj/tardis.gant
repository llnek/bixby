//////////////////////////////////////////////////////////////////////////////
// clean
target (cleanTardis: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis", quiet: true)
  //delete ( dir: "${qaDir}/czlab", quiet: true)
}

//////////////////////////////////////////////////////////////////////////////
// build
target (buildTardis: '') {
  depends (cleanTardis, checkTpcl, resolve, preBuild)
  println "##############################################################################"
  println "Building module ${gantProjectName}#clojure.tardis"
  println "##############################################################################"
  doCompileTardis()
}

target (cTardisJar: '') {
  ant.delete (file: "${distribDir}/exec/tardis-${buildVersion}.jar", quiet: true)
  doJarTardis()
}

target (cTardisCore: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis/core", quiet: true)
  clj_Core()
}
target (cTardisEtc: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis/etc", quiet: true)
  clj_Etc()
}
target (cTardisAuth: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis/auth", quiet: true)
  clj_Auth()
}
target (cTardisIO: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis/io", quiet: true)
  clj_IO()
}
target (cTardisMVC: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis/mvc", quiet: true)
  clj_MVC()
}
target (cTardisMain: '') {
  ant.delete ( dir: "${buildDir}/czlabclj/tardis/impl", quiet: true)
  clj_Main()
}

//////////////////////////////////////////////////////////////////////////////
//
def doCompileTardis() {

  clj_Core()
  clj_Etc()
  clj_Auth()
  clj_IO()
  clj_MVC()
  clj_Main()

  doJarTardis()
}

def doJarTardis() {

  ant.copy (todir: "${buildDir}/czlabclj/tardis") {
    fileset (dir: "${srcDir}/clojure/czlabclj/tardis") {
      exclude (name: '**/*.meta')
      exclude (name: '**/*.clj')
      exclude (name: '**/.svn')
    }
  }

  ant.jar (destfile: "${distribDir}/exec/tardis-${buildVersion}.jar") {
    fileset (dir: "${buildDir}") {
      include (name: 'czlabclj/tardis/**')
    }
  }

}

//////////////////////////////////////////////////////////////////////////////
