}

//////////////////////////////////////////////////////////////////////////////
// build
target (buildJSFrwk: '') {
  depends (cleanJSFrwk, checkTpcl, resolve, preBuild)
  println "##############################################################################"
  println "Building module ${gantProjectName}#skarojs"
  println "##############################################################################"
  doCompileJSFrwk()
}

//////////////////////////////////////////////////////////////////////////////
//
def doCompileJSFrwk() {

  ant.exec (executable: 'babel', dir: "${basedir}") {
    arg(value: "${srcDir}/js")
    arg(value: '--out-dir')
    arg(value: "${buildDir}/skarojs")
  }

}

