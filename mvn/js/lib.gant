// clean
target (cleanJSFrwk: '') {
  ant.delete ( dir: "${buildDir}/skarojs", quiet: true)
}

target (cleanJSFrwkTest: '') {
  ant.delete ( dir: "${buildTestDir}/skarojs", quiet: true)
}

//////////////////////////////////////////////////////////////////////////////
// test
target (buildJSFrwkTest: '') {
  depends(cleanJSFrwkTest, preTest)
  doCompileJSFrwkTest()
}

target (runJSFrwkTest: '') {
  depends(buildJSFrwkTest)
  doRunJSFrwkTest()
}

